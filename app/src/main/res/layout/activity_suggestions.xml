<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Suggestions">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:background="@drawable/layout_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="We understand nothing is perfect \n So in case of BUGS or HUGS please\nWrite To Us. Thank You !"
        android:textSize="23sp"
        android:padding="10dp"
        android:textColor="#af2863"
        />

    <EditText
        android:layout_width="match_parent"

        android:layout_height="50dp"
        android:id="@+id/suggestionText"
        android:layout_marginTop="270dp"

        />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Submit"
    android:id="@+id/suggestionSubmit"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="@drawable/button_on"
    />
    </LinearLayout>
</LinearLayout>